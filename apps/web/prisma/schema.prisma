generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  name String 
  password String
  workflows Workflow[]
}

model Workflow{
  id String @id @default(uuid())
  name String 
  userId String
  user User @relation(fields: [userId],references: [id] ,onDelete: Cascade)
  status workflowStatus
  nodes Node[]
}

model Node{
  id String @id @default(uuid())
  nodeId Int 
  workflowId String
  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  functionName String
  type nodeType

  @@unique([workflowId,nodeId])
}

enum nodeType{
  MANUAL 
  TRIGGER
}

enum workflowStatus{
  ACTIVE
  INACTIVE
}