generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User{
  id String @id @default(uuid())
  username String 
  password String
  workflows Workflow[]
  credentials Credentials[]
}

model Credentials{
  id String @id @default(uuid())
  apiKey String
  baseUrl String
  Provider LLMProvider
  userId String
  user User @relation(fields:  [userId],references: [id],onDelete: Cascade)
}

enum LLMProvider{
  OpenAI
  Anthropic
  Gemini
}
model Workflow{
  id String @id @default(uuid())
  name String 
  userId String
  user User @relation(fields: [userId],references: [id] ,onDelete: Cascade)
  status workflowStatus
  nodes Node[]
}

model Node{
  id String @id @default(uuid())
  nodeId Int 
  workflowId String
  workflow Workflow @relation(fields: [workflowId], references: [id], onDelete: Cascade)
  functionName String
  type nodeType
  config String?
  @@unique([workflowId,nodeId])
}

enum nodeType{
  MANUAL 
  TRIGGER
  LLM
}

enum workflowStatus{
  ACTIVE
  INACTIVE
}